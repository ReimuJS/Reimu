{
  "name": "reimu",
  "version": "0.1.0",
  "description": "Simple and reliable real-time bidirectional communication using uWebSockets.js",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "build:windows": "npm run del:windows && tsc",
    "del:windows": "IF EXIST .\\dist\\ rmdir /Q/S .\\dist\\",
    "commit": "git-cz",
    "acp": "git add . && npm run commit && git push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sup3rFire/Reimu.git"
  },
  "keywords": [
    "simple",
    "reliable",
    "realtime",
    "real-time",
    "ws",
    "websocket",
    "uWebSockets.js",
    "uws"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sup3rFire/Reimu/issues"
  },
  "homepage": "https://github.com/Sup3rFire/Reimu#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/node": "^16.11.10",
    "cuid": "^2.1.8",
    "msgpackr": "^1.5.1"
  },
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "semantic-release": "18.0.1",
    "typescript": "^4.4.3",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.4.0",
    "ws": "^8.3.0"
  }
}
